layout {
    background-color "transparent"

    focus-ring {
        active-color   "#ffb2be"
        inactive-color "#899483"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#ffb2be"
        inactive-color "#899483"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#ffb2be"
        inactive-color "#899483"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#ffb2be80"
    }
}

recent-windows {
    highlight {
        active-color   "#75303f"
        urgent-color   "#ffb4ab"
    }
}